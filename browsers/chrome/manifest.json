{
    "manifest_version": 3,
    "name": "Portfolio Performance Sync",
    "version": "0.1.0",
    "description": "Export your entire portfolio with a single click, then import to Portfolio Performance!",
    "permissions": [
        "cookies",
        "downloads"
    ],
    "host_permissions": [
        "https://*.scalable.capital/*"
    ],
    "background": {
        "service_worker": "background/service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.scalable.capital/*"
            ],
            "js": [
                "content/content-script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_title": "Portfolio Performance Sync",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}
